{
  "name": "@tscmono/root",
  "author": {
    "email": "sabinmarcu@gmail.com",
    "name": "Sabin Marcu"
  },
  "workspaces": [
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "postinstall": "is-ci || husky install",
    "docs": "yarn typedoc",
    "docs:dev": "run-p \"docs:dev:*\"",
    "docs:dev:docs": "nodemon -e ts,hbs -x yarn docs",
    "docs:dev:serve": "serve docs",
    "build-packages": "yarn workspaces foreach -vpitA run build",
    "build": "tsc -b",
    "build:dev": "tsc -b --watch",
    "publish-packages": "run-s \"publish:*\"",
    "publish:check": "yarn version check",
    "publish:apply": "yarn version apply --all",
    "publish:run": "yarn workspaces foreach --exclude @tscmono/root -vpitA npm publish --tolerate-republish",
    "ver": "yarn version check --interactive",
    "feat": "gh issue create --label feat --project Backlog --assignee sabinmarcu --body \\\"\\\" --title \"$*\" && yarn fetch",
    "bug": "gh issue create --label bug --project Backlog --assignee sabinmarcu --body \\\"\\\" --title \"$*\" && yarn fetch",
    "chore": "gh issue create --label chore --project Backlog --assignee sabinmarcu --body \\\"\\\" --title \"$*\" && yarn fetch",
    "pr": "run-s \"pr:*\"",
    "pr:push": "git push origin \"$(yarn config:branch)\"",
    "pr:create": "gh pr create --base staging --repo \"$(yarn config:remote)\" --head \"$(yarn config:branch)\" --project Backlog --fill",
    "pr:merge": "gh pr merge -rd",
    "pr:pull": "git pull origin \"$(yarn config:branch)\"",
    "pr:prune": "yarn prune",
    "pr:perm": "yarn config:perm",
    "prune": "run-s \"prune:*\"",
    "prune:local": "git prune",
    "prune:remote": "git remote prune origin",
    "config:remote": "git config --get remote.origin.url | cut -d: -f2- | cut -d. -f1",
    "config:branch": "git rev-parse --abbrev-ref HEAD",
    "config:issue": "yarn config:branch | cut -d/ -f2- | cut -d- -f2-",
    "config:perm": "find .husky -type f -print0 | xargs -0 chmod +x",
    "config:clean": "git check-ignore * | xargs rm -rf"
  },
  "version": "0.2.8",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "patch:@strictsoftware/typedoc-plugin-monorepo@^0.3.1#.yarn/patches/@strictsoftware-typedoc-plugin-monorepo",
    "@types/eslint": "^7",
    "@types/glob": "^7",
    "@types/is-ci": "^2",
    "@types/node": "^14.14.16",
    "@types/semver": "^7",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "husky": "5",
    "is-ci": "^2.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.17",
    "typedoc-plugin-jekyll": "^0.1.0",
    "typescript": "^4.1.3"
  }
}
