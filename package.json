{
  "name": "@tscmono/root",
  "author": {
    "email": "sabinmarcu@gmail.com",
    "name": "Sabin Marcu"
  },
  "workspaces": [
    "packages/*",
    "tests/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "docs": "yarn typedoc",
    "docs:dev": "run-p \"docs:dev:*\"",
    "docs:dev:docs": "nodemon -e ts,hbs -x yarn docs",
    "docs:dev:serve": "serve docs",
    "build-packages": "yarn workspaces foreach run build",
    "build": "tsc -b",
    "publish-packages": "run-s \"publish:*\"",
    "publish:check": "yarn version check",
    "publish:apply": "yarn version apply --all",
    "publish:run": "yarn workspaces foreach run npm publish --tolerate-republish",
    "ver": "yarn version check --interactive"
  },
  "version": "0.2.2",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@strictsoftware/typedoc-plugin-monorepo": "patch:@strictsoftware/typedoc-plugin-monorepo@^0.3.1#.yarn/patches/@strictsoftware-typedoc-plugin-monorepo",
    "@types/eslint": "^7",
    "@types/glob": "^7",
    "@types/node": "^14.14.16",
    "@types/semver": "^7",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "glob": "^7.1.6",
    "husky": "5",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "serve": "^11.3.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.17",
    "typedoc-plugin-jekyll": "^0.1.0",
    "typescript": "^4.1.3"
  }
}
